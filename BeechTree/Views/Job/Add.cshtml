@using BeechTree.Controllers
@model BeechTree.Models.JobAdd

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title"><span class="glyphicon glyphicon-briefcase"></span> Add New Job</h3>
</div>

<div class="modal-body">

    <div class="form-horizontal">

        @using (Html.BeginForm("Add", "Job", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <fieldset>

                <div class="form-group">
                    @Html.LabelFor(m => m.StartDate, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.StartDate, Model.StartDate.ToShortDateString(), new { @class = "form-control", @autofocus = "autofocus", placeholder = "Job Date" })
                    </div>
                    <div class="col-lg-9">
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Description" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.SiteId, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.DropDownListFor(m => m.SiteId, JobController.SitesGet(), new { @class = "form-control", placeholder = "Site" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ServiceCode, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.DropDownListFor(m => m.ServiceCode, JobController.ServiceCodesGet(), new { @class = "form-control", placeholder = "Service Code" })
                    </div>
                </div>

            </fieldset>


            <div class="modal-footer">
                <input type="submit" class="btn btn-primary" value="Add" />
                <button class="btn btn-default" data-dismiss="modal">Back to list</button>
            </div>


        }

    </div>

</div>

