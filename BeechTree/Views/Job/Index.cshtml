@model BeechTree.Models.PagedList<BeechTree.Models.Job>
@{
    ViewBag.Title = "Job List";
}

<h1><span class="glyphicon glyphicon-briefcase"></span> @ViewBag.Title</h1>
<div class="well">
    @using (Html.BeginForm("index", null, FormMethod.Get))
    {
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group">

                    <input type="text"
                           name="filter"
                           value="@ViewBag.filter"
                           class="form-control"
                           style="display: inline"
                           placeholder="Search by job number or job description" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Go</button>
                    </span>

                </div>
            </div>
            <div class="col-sm-5"></div>
            <div class="pull-right col-lg-1">
                <a class="btn btn-success" data-modal="" href="/Job/Add" id="btnAdd">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
            </div>
        </div>

        <div style="margin-top:17px;">
            @{
                var grid = new WebGrid(
                            canPage: true,
                            rowsPerPage: Model.PageSize,
                            canSort: true,
                            ajaxUpdateContainerId: "grid");

                grid.Bind(Model.Content, rowCount: Model.TotalRecords, autoSortAndPage: false);
                grid.Pager(WebGridPagerModes.All);

                @grid.GetHtml(htmlAttributes: new { id = "datatable", ajaxUpdateContainerId = "grid" },   // id for ajaxUpdateContainerId parameter
            fillEmptyRows: false,
            tableStyle: "table table-bordered table-hover",
            mode: WebGridPagerModes.All,
            columns: grid.Columns(
              grid.Column("Id", style: "grid id"),
              grid.Column("JobNo", "Job#", style: "grid jobno"),
              grid.Column("CustNo", "Cust#", style: "grid jobno"),
              grid.Column("Descrip", "Description", style: "grid description"),
              grid.Column(header: "Action", canSort: false, style: "grid action",
                format: @<text>
                @Html.IconFor((string)item.JobNo, "shifts")
                @Html.IconFor((string)item.JobNo, "employees")
                @Html.IconFor((string)item.JobNo, "equipments")
                @Html.IconFor((string)item.JobNo, "invoice")
                @*@Html.Raw("<a data-modal='' href='/job/shifts/" + item.JobNo + "' id='" + item.JobNo + "' title='Shifts'> <span class='glyphicon glyphicon-align-justify'> </span> </a>")
                    @Html.Raw("<a data-modal='' href='/job/employees/" + item.JobNo + "' id='" + item.JobNo + "' title='Employees'> <span class='glyphicon glyphicon-user'> </span> </a>")
                    @Html.IconFor((string)item.JobNo, "employee")
                    @Html.Raw("<a data-modal='' href='/job/equipments/" + item.JobNo + "' id='" + item.JobNo + "' title='Equipment'> <span class='glyphicon glyphicon-wrench'> </span> </a>")
                    @Html.Raw("<a href='/job/invoice/" + item.JobNo + "' title='Invoice'> <span class='glyphicon glyphicon-list-alt'> </span> </a>")*@
                </text>)

            ));
            }


        </div>
                }
</div>


<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/datatables")

