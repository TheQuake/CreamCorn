@model BeechTree.Models.PagedList<BeechTree.Models.Unit>
@{
    ViewBag.Title = "Unit List";
}

<h1><span class="glyphicon glyphicon-equalizer"></span> @ViewBag.Title</h1>
<div class="well">
    @using (Html.BeginForm("index", null, FormMethod.Get))
    {
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group">

                    <input type="text"
                           name="filter"
                           value="@ViewBag.filter"
                           class="form-control"
                           style="display: inline"
                           placeholder="Search by unit" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Go</button>
                    </span>

                </div>
            </div>
            <div class="col-sm-5"></div>
            <div class="pull-right col-lg-1">
                @*<a class="btn btn-success" data-modal="" href="/Unit/Create" id="btnCreate">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>*@
            </div>
        </div>

        <div style="margin-top:17px;">
            @{
                var grid = new WebGrid(
                            canPage: true,
                            rowsPerPage: Model.PageSize,
                            canSort: true,
                            ajaxUpdateContainerId: "grid");

                grid.Bind(Model.Content, rowCount: Model.TotalRecords, autoSortAndPage: false);
                grid.Pager(WebGridPagerModes.All);

                @grid.GetHtml(htmlAttributes: new { id = "datatable", ajaxUpdateContainerId = "grid" },   // id for ajaxUpdateContainerId parameter
            fillEmptyRows: false,
            tableStyle: "table table-bordered table-hover",
            mode: WebGridPagerModes.All,
            columns: grid.Columns(
              grid.Column("Name", style: "grid id"),
              grid.Column("Description", "Description", style: "grid description")
            ));
            }


        </div>
                }
</div>


<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/datatables")

